<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roof.fpa.character.dao">

	<sql id="columns">
		id, name, theme_id, character_color_id, gender, state, description, card_unit_id
	</sql>

	<sql id="columns_as">
		id as id , name as name , theme_id as themeId , character_color_id as characterColorId , gender as gender , state as state , description as description , card_unit_id as cardUnitId 
	</sql>


	<sql id="vals">
		#{id}, #{name}, #{themeId}, #{characterColorId}, #{gender}, #{state}, #{description}, #{cardUnitId}
	</sql>
	<sql id="conds">
		<if test="id != null">
			and id = #{id}
		</if>
		<if test="name != null and name != ''">
			and name = #{name}
		</if>
		<if test="themeId != null">
			and theme_id = #{themeId}
		</if>
		<if test="characterColorId != null">
			and character_color_id = #{characterColorId}
		</if>
		<if test="gender != null">
			and gender = #{gender}
		</if>
		<if test="state != null">
			and state = #{state}
		</if>
		<if test="description != null and description != ''">
			and description = #{description}
		</if>
		<if test="cardUnitId != null">
			and card_unit_id = #{cardUnitId}
		</if>
	</sql>

	<insert id="saveCharacter" parameterType="com.roof.fpa.character.entity.Character" useGeneratedKeys="true" keyProperty="id">
		<selectKey keyProperty="id" resultType="Long" order="AFTER">
			select last_insert_id()
		</selectKey>
		insert into c_character (<include refid="columns" />) 
		values (<include refid="vals" />)
	</insert>

	<delete id="deleteCharacter">
		delete from c_character
		where id=#{id} 
	</delete>

	<delete id="deleteByExampleCharacter">
		delete from c_character
		where 1=1
		<include refid="conds" />
	</delete>

	<update id="updateCharacter">
		update c_character
		<set>
			id=#{id}, 
			name=#{name}, 
			theme_id=#{themeId}, 
			character_color_id=#{characterColorId}, 
			gender=#{gender}, 
			state=#{state}, 
			description=#{description}, 
			card_unit_id=#{cardUnitId}
		</set>
		where id=#{id} 
	</update>

	<update id="updateIgnoreNullCharacter">
		update c_character
		<set>
		<if test="id != null">
			id=#{id}, 
		</if>
		<if test="name != null and name != ''">
			name=#{name}, 
		</if>
		<if test="themeId != null">
			theme_id=#{themeId}, 
		</if>
		<if test="characterColorId != null">
			character_color_id=#{characterColorId}, 
		</if>
		<if test="gender != null">
			gender=#{gender}, 
		</if>
		<if test="state != null">
			state=#{state}, 
		</if>
		<if test="description != null and description != ''">
			description=#{description}, 
		</if>
		<if test="cardUnitId != null">
			card_unit_id=#{cardUnitId}
		</if>
		</set>
		where id=#{id} 
	</update>

	<update id="updateByExampleCharacter">
		update c_character
		<set>
			<if test="id != null">
			id=#{id}, 
			</if>
			<if test="name != null and name != ''">
			name=#{name}, 
			</if>
			<if test="themeId != null">
			theme_id=#{themeId}, 
			</if>
			<if test="characterColorId != null">
			character_color_id=#{characterColorId}, 
			</if>
			<if test="gender != null">
			gender=#{gender}, 
			</if>
			<if test="state != null">
			state=#{state}, 
			</if>
			<if test="description != null and description != ''">
			description=#{description}, 
			</if>
			<if test="cardUnitId != null">
			card_unit_id=#{cardUnitId}
			</if>
		</set>
		where 1=1
		<include refid="conds" />
	</update>
	
	<select id="loadCharacter" resultType="com.roof.fpa.character.entity.CharacterVo">
		select 
		<include refid="columns_as"/>
		from c_character
		where id=#{id} 
	</select>
	
	<select id="selectCharacter" resultType="com.roof.fpa.character.entity.CharacterVo">
		select 
		<include refid="columns_as"/>
		from c_character
		where 1=1
		<include refid="conds" />
	</select>
</mapper>